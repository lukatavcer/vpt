// #package uispecs

// #section RCRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 250,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 3.0,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Color:",
      "children": [
        {
          "type": "color-chooser",
          "bind": "color",
          "value": "#ffffff"
        }
      ]
    },
    {
      "type": "field",
      "label": "Light direction:",
      "children": [
        {
          "type": "vector",
          "bind": "direction",
          "value": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}

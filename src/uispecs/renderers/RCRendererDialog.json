// #package uispecs

// #section RCRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 250,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 3.0,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Randomize:",
      "children": [
        {
          "type": "checkbox",
          "bind": "randomize",
          "checked": false
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Lights",
      "children": [
        {
          "type": "field",
          "label": "Light type:",
          "children": [
            {
              "type": "dropdown",
              "bind": "lightSelect",
              "options": [
                {
                  "value": "ambient",
                  "label": "Ambient Light",
                  "selected": true
                },
                {
                  "value": "directed",
                  "label": "Directed Light"
                },
                {
                  "value": "point",
                  "label": "Point Light"
                }
              ]
            }
          ]
        },
        {
          "type": "panel",
          "bind": "lightSettingsContainer"
        }
      ]
    },
    {
      "type": "field",
      "label": "Light direction:",
      "children": [
        {
          "type": "vector",
          "bind": "direction",
          "value": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}

// #package uispecs

// #section PointLightDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Color:",
      "children": [
        {
          "type": "color-chooser",
          "bind": "color",
          "value": "#4C4C4C"
        }
      ]
    },
    {
      "type": "field",
      "label": "Light position:",
      "children": [
        {
          "type": "vector",
          "bind": "position",
          "value": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Attenuation:",
      "children": [
        {
          "type": "slider",
          "bind": "attenuation",
          "value": 0.15,
          "min": 0.01,
          "max": 1.0,
          "step": 0.01
        }
      ]
    },
    {
      "type": "field",
      "label": "Intensity:",
      "children": [
        {
          "type": "slider",
          "bind": "intensity",
          "value": 0.7,
          "min": 0.01,
          "max": 1.0,
          "step": 0.01
        }
      ]
    }
  ]
}

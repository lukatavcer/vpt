// #package uispecs

// #section PointLightDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Color:",
      "children": [
        {
          "type": "color-chooser",
          "bind": "color",
          "value": "#ffffff"
        }
      ]
    },
    {
      "type": "field",
      "label": "Light position:",
      "children": [
        {
          "type": "vector",
          "bind": "position",
          "value": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Attenuation:",
      "children": [
        {
          "type": "slider",
          "bind": "attenuation",
          "value": 1.0,
          "min": 0.01,
          "max": 1.0,
          "step": 0.1
        }
      ]
    }
  ]
}
